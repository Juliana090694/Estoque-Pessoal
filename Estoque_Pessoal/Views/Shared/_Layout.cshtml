<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <!--Nome do link, action,controller, html-->
                    <li>@Html.ActionLink("Clientes", "Index", "Clientes", null, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Meus Itens", "Index", "Itens", null, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Itens cadastrados", "Index", "Estoques", null, new { @class = "navbar-brand" })</li>
                   
                </ul>
                <ul class="navbar-nav mr-auto">

                    <li>@Html.ActionLink("Sair", "Logoff", "Clientes", null, new { @class = "navbar-brand"})</li>
                </ul>
            </div>
        </div>
    </nav>




    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Clientes", "Index", "Clientes")</li>
                    <li>@Html.ActionLink("Meus Itens", "Index", "Itens")</li>
                    <li>@Html.ActionLink("Itens cadastrados", "Index", "Estoques")</li>
                    <li>                        </li>
                    <li>@Html.ActionLink("Sair", "Logoff", "Clientes")</li>
                </ul>
            </div>
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center;">&copy; @DateTime.Now.Year - Meu Estoque</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
